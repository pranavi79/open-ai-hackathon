# Emergency Response AI System - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Cost Protection Settings (Recommended)
DEMO_MODE=true
MAX_DAILY_OPENAI_REQUESTS=50
MAX_DAILY_GOOGLE_REQUESTS=100
MAX_DAILY_TWILIO_CALLS=5
MAX_DAILY_TWILIO_MINUTES=10

# Application Settings
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Emergency Settings (Production Only)
EMERGENCY_SERVICES_NUMBER=911
EMERGENCY_ADDRESS_REGISTERED=false
